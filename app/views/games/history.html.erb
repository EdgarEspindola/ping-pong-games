<h1 class='page-header'>History</h1>

<% if @games.blank? %>
  <h3>No Found Records</h3>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Opponent</th>
        <th>Score</th>
        <th>Result</th>    
      </tr>
    </thead>

    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.date_played.strftime("%d/%m/%Y") %></td>
          <td><%= game.oponent.email %></td>
          <td><%= format_score(game.user_score, game.score_oponent) %></td>
          <td><%= format_result(game.user_score, game.score_oponent) %></td>        
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
  
